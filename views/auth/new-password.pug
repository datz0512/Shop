extends ../layouts/main-layout.pug

block styles   
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content   
    main       
        if errorMessage 
            div.user-message.user-message--error #{errorMessage}
        div.form-container
            h1.title Reset password
            form.login-form(action='/new-password' method="POST")
                .form-control
                    label.label(for="password") Password
                    input.password(type="password" name="password" id="password")
                    label.label(for="confirmPassword") Confirm Password
                    input.confirm-password(type="confirmPassword" name="confirmPassword" id="confirmPassword")
                button.btn(type="submit") Reset Password
                input(type="hidden", name='_csrf', value=csrfToken)
                input(type="hidden", name='userId', value=userId)
                input(type="hidden", name='passwordToken', value=passwordToken)